{
	"name": "snippet-sync-vscode",
	"displayName": "Snippet Sync",
	"description": "Keep your team's snippets up to date across projects.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:snippet-sync-vscode.updateAllSnippetFiles"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Snippet Sync",
			"properties": {
				"snippetSync.snippetFiles": {
					"type": "array",
					"description": "URLs of snippet files to sync. If you remove a URL from the list, the local file will be deleted at the next update.",
					"items": {
						"type": "string"
					}
				},
				"snippetSync.timeBetweenUpdates": {
					"type": "number",
					"default": 60,
					"description": "Time between automatic updates in minutes. To disable, set to 0.",
					"minimum": 0,
					"maximum": 1440
				}
			}
		},
		"commands": [
			{
				"command": "snippet-sync-vscode.updateAllSnippetFiles",
				"title": "Snippet Sync: Update all snippet files"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
